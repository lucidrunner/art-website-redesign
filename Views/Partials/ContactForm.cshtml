@using Atelje_Konstram.ViewModels;
@using Umbraco.Extensions
@using Umbraco.SampleSite.Controllers
@model PageContactFormViewModel;

@{
    var message = TempData["Message"]?.ToString();
}
<div class="form-group">
@using (Html.BeginUmbracoForm<ContactFormController>(nameof(ContactFormController.Submit)))
{
    <h2 class="form-title">@Model.Title</h2>
    <div class="form-input-container">
        <label >Förnamn och Efternamn
        @Html.TextBoxFor(m => m.Name, new {@class="form-control form-name", placeholder = "Namn Namnsson"})    
        </label>
        @Html.ValidationMessageFor(m => m.Name)
    </div>
        <div class="form-input-container">
        <label>
            Epost
        @Html.TextBoxFor(m => m.Email, new {@class="form-control form-email", placeholder ="namn.namnsson@mejl.se" })
        </label>
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <div class="form-pageinfo-container">
        <p class="form-pageinfo">
            @Model.PageInfo
        </p>
    </div>
        <div class="form-input-container">
        <label>
            Meddelande
        @Html.TextAreaFor(m => m.Message, new {@class="form-control form-message", placeholder = "Fyll i ditt meddelande..."})
            </label>
        @Html.ValidationMessageFor(m => m.Message)

    </div>
   <div class="submit-container">
    <input class="submit-button" type="submit" name="Submit" value="Submit"/>  
   @if (!string.IsNullOrEmpty(message))
   {
       @message
   }
   </div>
 
}
</div>